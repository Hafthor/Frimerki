{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=frimerki.db",
    "GlobalConnection": "Data Source=frimerki_global.db",
    "DomainDatabasePath": "./data/domains/"
  },
  "Jwt": {
    "Issuer": "Frimerki",
    "Audience": "Frimerki",
    "Secret": "change-this-in-production-to-a-secure-32-byte-key"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    }
  },
  "Server": {
    "MaxMessageSize": "25MB",
    "StorageQuotaPerUser": "1GB",
    "AttachmentsPath": "./attachments",
    "BackupsPath": "./backups",
    "LogsPath": "./logs",
    "EnableSMTP": true,
    "EnableIMAP": true,
    "EnablePOP3": true,
    "EnableWebAPI": true,
    "ReservedDomain": "frimerki.local"
  },
  "Ports": {
    "SMTP": 25,
    "SMTP_TLS": 587,
    "SMTP_SSL": 465,
    "IMAP": 143,
    "IMAP_SSL": 993,
    "POP3": 110,
    "POP3_SSL": 995,
    "WebAPI": 8080,
    "WebAPI_SSL": 8443
  },
  "Database": {
    "GlobalConnectionString": "Data Source=frimerki_global.db",
    "DomainDatabasePath": "./data/domains/",
    "BackupInterval": "24h",
    "RegistryCacheExpiration": "1h",
    "RegistryCacheSize": 1000
  },
  "Security": {
    "RequireSSL": false,
    "JWTSecret": "your-super-secret-jwt-key-change-this-in-production",
    "CertificatePath": "./certs/",
    "EnableRateLimit": true,
    "MaxFailedLogins": 5
  },
  "Smtp": {
    "Host": "localhost",
    "Port": "25",
    "Username": "",
    "Password": "",
    "EnableSsl": false
  },
  "AllowedHosts": "*"
}
